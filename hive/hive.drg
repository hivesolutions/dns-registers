; domain global parameters
$TTL 1h

; domain general parameters
hive.    IN    SOA    ns1.hive.    hostmaster.hive. (
            1          ; serial number
            1h         ; refresh time
            10m        ; transfer retry time
            1d         ; expiry time
            1h         ; negative cache time
)

; domain main address
        IN    A     172.16.0.11

; domain name servers
        IN    NS    ns1.hive.
        IN    NS    ns2.hive.
        IN    NS    ns3.hive.
        IN    NS    ns4.hive.

